<% if @current_user.id == @user.id %>
  <div class="container-color sky-blue">
    <div class="row">
      <div class="col-4 navy-background">
        <div class="small-row">
          <h2>Edit <%= @user.name %>'s Profile Information</h2>
        </div>
        <div class="small-row">
          <%= form_for @user do |f| %>
          <table>

            <tr>
              <td><%= f.label :username %></td>
              <td><%= f.text_field :username %></p></td>
            </tr>

            <tr>
              <td><%= f.label :password %></td>
              <td><%= f.password_field :password %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit 'Update Account', class: "create-button" %></td>
            </tr>
          </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <%= render file: "/public/404" %>
<% end %>
